<script type="text/javascript">
var JW_PLAYER_CONTAINER_ID = "ova-player-container";

function resizePlayer(form) {
   var width = document.forms["playerSizing"]["width"].value;
   var height = document.forms["playerSizing"]["height"].value;
   $("#player_row").css("width", width + "px");
   $("#player_row").css("height", height + "px");
   jwplayer(JW_PLAYER_CONTAINER_ID).resize(width, height);
   debug("Have resized the player to " + width + "x" + height);
}

function clearText(field){
    if (field.defaultValue == field.value) field.value = '';
    return true;
}

function getAdTag() {
    return document.tagform.adtag.value;
}

function formatConfig(config) {
   var result = "<pre class='prettyprint'>";
   result += "<br/>/*<br/>";
   result += "&nbsp;* This OVA configuration plays a pre-roll and has a<br/>";
   result += "&nbsp;* single 300x250 companion declared.<br/>";
   result += "&nbsp;*/<br/><br/>";
   config = config.replace(/`/gi,"<br/>");
   config = config.replace(/ /gi,"&nbsp;");
   return result + config + "<br/></code></pre>";
}

function configureOVA() {
   newConfig =   '{`';
   newConfig +=  '   "debug": { "levels": "fatal,config,vast_template,vpaid,http_calls" },`';
   newConfig +=  '   "autoPlay": true,`';
   newConfig +=  '   "ads": {`';
   newConfig +=  '      "companions": {`';
   newConfig +=  '          "regions": [`';
   newConfig +=  '             { "id":"companion", "width":300, "height":250 }`';
   newConfig +=  '          ]`';
   newConfig +=  '      },`';
   newConfig +=  '      "schedule": [`';
   newConfig +=  '           {`';
   newConfig +=  '               "position": "pre-roll",`';
   newConfig +=  '               "tag": "' + getAdTag() + '"`';
   newConfig +=  '           }`';
   newConfig +=  '      ]`';
   newConfig +=  '   }`';
   newConfig +=  '}`';

console.log(newConfig.replace(/`/gi," "));
   jwplayer(JW_PLAYER_CONTAINER_ID).getPlugin("ova").scheduleAds(null, newConfig.replace(/`/gi," "));
   
   $("div.codebox").html(formatConfig(newConfig));
   prettyPrint();
   
   return true;
}

jwplayer(JW_PLAYER_CONTAINER_ID).setup({
       flashplayer: "/content/ova/jwplayer/player.swf", 
       playlist: [
	       {  
	          file: "http://video.bitmedianetwork.com/ads/testpattern.mp4",
	          duration: 20
	       }
       ],
       "controlbar.position": "bottom",
       plugins: {
           "ova-jw": {
              "ads": {
              },
              "debug": {
                  "levels": "fatal, config, vast_template, vpaid, http_calls, tracking_events, playlist, api"
              }
           } 
       },
       height: 254,
       width: 320
});
</script>
