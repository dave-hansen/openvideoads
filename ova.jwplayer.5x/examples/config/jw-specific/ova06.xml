<config>
   <ova.title>
		Delivering ads over a YouTube video
   </ova.title>
   <ova.json>
       {
            "autoPlay": false,

            "regions": {
                "declarations": [
                    {
                        "id": "bottom",
                        "verticalAlign": "bottom",
                        "horizontalAlign": "center",
                        "backgroundColor": "#000000",
                        "padding": "-10 -10 -10 -10",
                        "width": 450,
                        "height": 50
                    }
                ]
            },

            "ads": {
                "servers": [
                    {
                        "type": "OpenX",
                        "apiAddress": "http://openx.openvideoads.org/openx/www/delivery/fc.php"
                    }
                ],
                "notice": { "textStyle": "smalltext" },
                "schedule": [
                    {
                        "zone": "18",
                        "position": "pre-roll"
                    }
                ]
            },

            "debug": {
               "debugger": "firebug"
            }
        }
   </ova.json>
</config>
