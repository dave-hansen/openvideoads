       {
            "ads": {
                "servers": [
                    {
                       "type": "OpenX",
                       "apiAddress": "OVA_OPENX_API"
                    }
                ],
                "companions": [
                    { "id":"companion", "width":"150", "height":"360" }
                ],
                "schedule": [
                    {
                       "zone": "1",
