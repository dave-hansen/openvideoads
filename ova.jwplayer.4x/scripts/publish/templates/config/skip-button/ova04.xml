<config>
   <ova.title>
       Enabling the Linear Skip Ad Button
   </ova.title>
   <ova.json>
       {
          "debug": {
              "debugger": "firebug",
              "levels": "OVA_DEBUG"
          },

          "ads": {
             "controls": {
                  "skipAd": {
                      "enabled": true,
                      "minimumAdDuration": 40
                  }
             },
             "servers": [
                   {
                      "type": "OpenX",
                      "apiAddress": "OVA_OPENX_API"
                   }
             ],
             "schedule": [
                {
                   "zone": "5",
                   "position": "pre-roll"
                }
             ]
          }
       }
   </ova.json>
</config>
