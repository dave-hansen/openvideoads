<config>
   <ova.title>
       Customising the "skip ad" button image
   </ova.title>
   <ova.json>
       {
          "debug": {
              "debugger": "firebug",
              "levels": "OVA_DEBUG"
          },

          "ads": {
             "controls": {
                  "skipAd": {
                      "enabled": true,
                      "image": "OVA_SKIP_BUTTON_IMAGE_ALT_1",
                      "width": 65,
                      "height": 15
                  }
             },
             "servers": [
                   {
                      "type": "OpenX",
                      "apiAddress": "OVA_OPENX_API"
                   }
             ],
             "schedule": [
                {
                   "zone": "5",
                   "position": "pre-roll"
                }
             ]
          }
       }
   </ova.json>
</config>
