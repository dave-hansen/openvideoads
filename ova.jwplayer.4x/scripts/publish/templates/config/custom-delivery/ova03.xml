<config>
   <ova.title>
       Example 3 - Targetted Ad Delivery
   </ova.title>
   <ova.json>
       {
            "debug": {
              "debugger": "firebug",
              "levels": "OVA_DEBUG"
            },

            "ads": {
                "pauseOnClickThrough": true,
              "servers": [
                   {
                      "type": "OpenX",
                      "apiAddress": "OVA_OPENX_API",
                      "customProperties": {
                            "target": [ "category=food", "gender=male" ]
                      }
                   }
              ],
              "schedule": [
                  {
                      "zone": "5",
                      "position": "pre-roll"
                  }
              ]
            }
       }
   </ova.json>
</config>
