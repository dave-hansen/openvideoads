<config>
   <ova.title>
       Example 3 - Turning off the Ad Notice
   </ova.title>
   <ova.json>
       {
            "debug": {
              "debugger": "firebug",
              "levels": "OVA_DEBUG"
            },

            "ads": {
                "pauseOnClickThrough": true,
                "notice": { "show": false },
                "servers": [
                    {
                       "type": "OpenX",
                       "apiAddress": "OVA_OPENX_API"
                    }
                ],
                "schedule": [
                    {
                       "zone": "5",
                       "position": "pre-roll"
                    }
                ]
            }
       }
   </ova.json>
</config>
