                "servers": [
                    {
                      "type": "OpenX",
                      "apiAddress": "OVA_OPENX_API"
                    }
                ],
                "schedule": [
                    {
                      "zone": "5",
                      "position": "pre-roll"
                    }
                ]
            }
       }
