<config>
   <ova.title>
       Adding custom variables to Ad Tags via the external config file
   </ova.title>
   <ova.json>
       {
            "debug": {
                "debugger": "firebug",
                "levels": "OVA_DEBUG"
            },

            "ads": {
                "pauseOnClickThrough": true,
                "servers": [
                    {
                      "type": "OpenX",
                      "apiAddress": "OVA_OPENX_API",
                      "tagParams": {
                          "a": "aa",
                          "b": "bb"
                      }
                    }
                ],
                "schedule": [
                    {
                      "zone": "5",
                      "position": "pre-roll"
                    }
                ]
            }
       }
   </ova.json>
</config>
