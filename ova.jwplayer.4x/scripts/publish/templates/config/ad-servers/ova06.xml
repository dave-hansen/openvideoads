<config>
   <ova.title>
       Specifying a timeout for ad calls
   </ova.title>
   <ova.json>
       {
            "debug": {
                "levels": "OVA_DEBUG"
            },

            "ads": {
                "pauseOnClickThrough": true,
                "servers": [
                    {
                      "type": "Direct",
                      "apiAddress": "OVA_DELAYED_RESPONSE_AD_TAG",
                      "timeoutInSeconds": 10
                    }
                ],
                "schedule": [
                    {
                      "zone": "5",
                      "position": "pre-roll"
                    }
                ]
            }
       }
   </ova.json>
</config>
